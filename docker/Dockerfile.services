# docker/Dockerfile.services
FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY services/ ./services/

RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    mkdir -p logs && chown nodejs:nodejs logs
USER nodejs

CMD ["node", "services/genLayerIntegration.js"]
