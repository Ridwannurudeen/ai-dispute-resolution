# Base AI Dispute Resolution - Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# BLOCKCHAIN CONFIGURATION
# ==========================================

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API key for contract verification
BASESCAN_API_KEY=your_basescan_api_key

# ==========================================
# CONTRACT ADDRESSES (after deployment)
# ==========================================

DISPUTE_CONTRACT_ADDRESS=0x...
ORACLE_ADAPTER_ADDRESS=0x...
EVIDENCE_MANAGER_ADDRESS=0x...

# ==========================================
# GENLAYER CONFIGURATION
# ==========================================

# GenLayer API endpoint
GENLAYER_ENDPOINT=https://api.genlayer.io

# GenLayer API key
GENLAYER_API_KEY=your_genlayer_api_key

# Relayer private key (for oracle callbacks)
RELAYER_PRIVATE_KEY=your_relayer_private_key

# ==========================================
# TREASURY CONFIGURATION
# ==========================================

# Treasury address for platform fees
TREASURY_ADDRESS=0x...

# Relayer address (for GenLayer integration)
RELAYER_ADDRESS=0x...

# ==========================================
# IPFS CONFIGURATION
# ==========================================

# Infura IPFS credentials
INFURA_IPFS_PROJECT_ID=your_infura_project_id
INFURA_IPFS_SECRET=your_infura_secret

# IPFS Gateway
IPFS_GATEWAY=https://ipfs.io/ipfs/

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# Vite environment variables (prefix with VITE_)
VITE_CONTRACT_ADDRESS=0x...
VITE_CHAIN_ID=8453
VITE_NETWORK_NAME=Base Mainnet

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Enable gas reporting
REPORT_GAS=false

# CoinMarketCap API for gas price conversion
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Logging level
LOG_LEVEL=info

# ==========================================
# DEVELOPMENT
# ==========================================

# Enable forking for local testing
FORK_ENABLED=false

# Node environment
NODE_ENV=development
