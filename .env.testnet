# Base Sepolia Testnet Configuration
# Copy this to .env and fill in your values

# ==========================================
# REQUIRED FOR DEPLOYMENT
# ==========================================

# Your deployer private key (WITHOUT 0x prefix)
# Get testnet ETH from: https://www.coinbase.com/faucets/base-ethereum-sepolia-faucet
PRIVATE_KEY=your_private_key_here

# Base Sepolia RPC URL
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Basescan API key for contract verification
# Get from: https://basescan.org/myapikey
BASESCAN_API_KEY=your_basescan_api_key

# ==========================================
# OPTIONAL - Will use deployer address if not set
# ==========================================

# Treasury address (receives platform fees)
TREASURY_ADDRESS=

# Relayer address (for GenLayer oracle callbacks)
RELAYER_ADDRESS=

# ==========================================
# POST-DEPLOYMENT - Fill after running deploy
# ==========================================

DISPUTE_CONTRACT_ADDRESS=
ORACLE_ADAPTER_ADDRESS=
EVIDENCE_MANAGER_ADDRESS=
REPUTATION_SYSTEM_ADDRESS=
MULTI_TOKEN_DISPUTE_ADDRESS=

# ==========================================
# GENLAYER CONFIGURATION
# ==========================================

GENLAYER_ENDPOINT=https://api.genlayer.io
GENLAYER_API_KEY=your_genlayer_api_key

# Relayer private key (for oracle callbacks)
RELAYER_PRIVATE_KEY=

# ==========================================
# IPFS CONFIGURATION (Optional)
# ==========================================

INFURA_IPFS_PROJECT_ID=
INFURA_IPFS_SECRET=
IPFS_GATEWAY=https://ipfs.io/ipfs/

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

VITE_CONTRACT_ADDRESS=
VITE_CHAIN_ID=84532
VITE_NETWORK_NAME=Base Sepolia

# ==========================================
# BACKEND CONFIGURATION
# ==========================================

JWT_SECRET=your-super-secret-jwt-key-change-this
PORT=4000
FRONTEND_URL=http://localhost:3000

# ==========================================
# MONITORING
# ==========================================

LOG_LEVEL=info
REPORT_GAS=true
